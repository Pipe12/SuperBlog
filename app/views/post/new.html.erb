<h1>Nuevo post</h1>

<% if @post.errors.any? %>
	<div id="error_explanation">
		<h2>
			<%= pluralize(@post.errors.count, "error")%> prohibe que este post se guarde
		</h2>
		<ul>
			<% @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<%end %>

<%= form_with scope: :post, url: post_index_path, local: true do |form| %>
	<p>
		<%= form.label :title %>
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :body %>
		<%= form.text_area :body %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>
<%= link_to 'Volver', post_index_path %>