<h1>Lista de post</h1>
<%= link_to 'Nuevo post', new_post_path %>
<table>
	<tr>
		<th>Titulo</th>
		<th>Cuerpo</th>
		<th colspan="3">
		</th>
	</tr>

	<% @posts.each do |post| %>
		<tr>
			<td><%= post.title %></td>
			<td><%= post.body %></td>
			<td><%= link_to 'Ver', post_path(post) %></td>
			<td><%= link_to 'Editar', edit_post_path(post) %></td>
			<td><%= link_to 'Eliminar', post_path(post), method: :delete, data: {confirm: 'Estas seguro ?'} %></td>
		</tr>
	<% end %>
</table>