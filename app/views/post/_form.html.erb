<%= form_with model: @post do |form| %>

	<% if @post.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@post.errors.count, "error")%> prohibe que este post se guarde
			</h2>
			<ul>
				<% @post.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<%end %>

	<p>
		<%= form.label :title %>
		<%= form.text_field :title %>
	</p>
	<p>
		<%= form.label :body %>
		<%= form.text_area :body %>
	</p>

	<p>
		<%= form.submit %>
	</p>
<% end %>