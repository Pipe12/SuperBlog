<%= form_with model: @post do |form| %>

	<% if @post.errors.any? %>
	  <div class="alert alert-danger mt-3" role="alert">
	    <h3>
	      <%= pluralize(@post.errors.count, "error")%> prohibe que este post se guarde
	    </h3>
	    <ul class="mb-0">
	      <% @post.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>

	<%= form_with scope: :post, url: post_index_path, local: true do |form| %>
	  <form class="mt-2">
	    <div class="form-group">
	      <%= form.label :titulo %>
	      <%= form.text_field :title, class: "form-control" %>
	    </div>
	    <div class="form-group">
	      <%= form.label :body %>
	      <%= form.text_area :body, class: "form-control", rows: "3"%>
	    </div>
	    <%= form.submit "Editar Post", class: "btn btn-primary" %>
	  </form>
	<% end %>
<% end %>