<div class="container">
  <div class="col-10 offset-1">

    <%= link_to 'Volver', posts_path, class: "row mt-5" %>

    <!-- Post -->
    <div class="row mt-5">
      <div class="col-12">
        <h1><%= @post.title %></h1>
      </div>
    </div>
    <div class="row">
      <p class="col-12 mt-3"><%= @post.body %></p>
    </div>

    <% @post.comments.each do |comment| %>
      <div class="card mt-4">
        <div class="card-header">
          <span>user1@example.com comento hace alrrededor de 1 hora</span>
        </div>
        <div class="card-body">
          <%= comment.comment %>
        </div>
      </div>
    <% end %>


    <%= form_with(model: [ @post, @post.comments.build ], local: true, class: "mt-4") do |form| %>
      <div class="form-group">
        <%= form.label "Nuevo_comentario" %>
        <%= form.text_area :comment, class: "form-control", rows: "3" %>
        <%= form.submit "Comentar", class: "btn btn-primary mt-3" %>
      </div>
    <% end %>

  </div>
</div>
